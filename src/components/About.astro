<style>
  /* CSS Variables - ensuring consistency */
  :root {
    --color-orange: #FD7504;
    --color-blue: #34FEFA;
    --color-pink: #F92178;
    --color-white: #ffffff;
    --color-black: #000000;
    --color-gray-50: #f8f9fa;
    --color-gray-100: #e9ecef;
    --color-gray-400: #6c757d;
    --color-gray-900: #1a1a1a;
    
    --font-family-primary: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --font-family-display: 'Inter', sans-serif;
    
    --container-large: 1400px;
    --container-medium: 1200px;
    --container-small: 800px;
    
    --section-padding: 160px;
    --section-padding-mobile: 80px;
  }

  /* Layout Components */
  .container-large {
    max-width: var(--container-large);
    margin: 0 auto;
    padding: 0 32px;
  }

  @media (max-width: 768px) {
    .container-large {
      padding: 0 20px;
    }
  }

  /* Section Backgrounds */
  .section-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.03;
    pointer-events: none;
  }

  .bg-accent-orange {
    background: linear-gradient(135deg, var(--color-orange) 0%, transparent 70%);
  }

  /* Typography */
  .section-number {
    font-family: var(--font-family-primary);
    font-size: 14px;
    font-weight: 500;
    color: var(--color-gray-400);
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 24px;
  }

  .section-title {
    font-family: var(--font-family-display);
    font-size: clamp(48px, 8vw, 120px);
    font-weight: 800;
    line-height: 0.9;
    color: var(--color-white);
    margin-bottom: 32px;
    letter-spacing: -0.02em;
  }

  .title-accent {
    font-weight: 300;
    font-style: italic;
    color: var(--color-gray-400);
  }

  .section-description {
    font-family: var(--font-family-primary);
    font-size: 20px;
    font-weight: 400;
    line-height: 1.6;
    color: var(--color-gray-400);
    max-width: 640px;
  }

  /* About Section Styles */
  .section-about {
    padding: var(--section-padding) 0;
    background-color: var(--color-black);
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 120px;
    align-items: start;
    margin-bottom: 160px;
  }

  .about-content {
    display: flex;
    flex-direction: column;
    gap: 80px;
  }

  .about-story {
    opacity: 0;
    transform: translateY(60px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .about-story.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  .story-title {
    font-family: var(--font-family-display);
    font-size: 32px;
    font-weight: 700;
    color: var(--color-white);
    margin-bottom: 24px;
    letter-spacing: -0.01em;
  }

  .story-text {
    font-family: var(--font-family-primary);
    font-size: 18px;
    line-height: 1.7;
    color: var(--color-gray-400);
    margin-bottom: 24px;
  }

  .story-text:last-child {
    margin-bottom: 0;
  }

  .about-values {
    opacity: 0;
    transform: translateY(60px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    transition-delay: 0.2s;
  }

  .about-values.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  .values-title {
    font-family: var(--font-family-display);
    font-size: 32px;
    font-weight: 700;
    color: var(--color-white);
    margin-bottom: 40px;
    letter-spacing: -0.01em;
  }

  .values-grid {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .value-item {
    display: grid;
    grid-template-columns: 60px 1fr;
    gap: 24px;
    align-items: start;
    padding: 32px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    opacity: 0;
    transform: translateX(-40px);
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .value-item.in-view {
    opacity: 1;
    transform: translateX(0);
  }

  .value-number {
    font-family: var(--font-family-primary);
    font-size: 14px;
    font-weight: 500;
    color: var(--color-gray-400);
    letter-spacing: 1px;
  }

  .value-title {
    font-family: var(--font-family-display);
    font-size: 24px;
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: 12px;
  }

  .value-description {
    font-family: var(--font-family-primary);
    font-size: 16px;
    line-height: 1.6;
    color: var(--color-gray-400);
  }

  /* Team Section */
  .team-section {
    margin-bottom: 160px;
  }

  .team-header {
    margin-bottom: 80px;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 60px;
  }

  .team-member {
    opacity: 0;
    transform: translateY(40px);
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .team-member.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  .member-visual {
    margin-bottom: 24px;
  }

  .member-image {
    width: 100%;
    height: 300px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.02) 100%);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .team-member:hover .member-image {
    transform: translateY(-4px);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .member-name {
    font-family: var(--font-family-display);
    font-size: 24px;
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: 8px;
  }

  .member-role {
    font-family: var(--font-family-primary);
    font-size: 14px;
    font-weight: 500;
    color: var(--color-gray-400);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 16px;
  }

  .member-bio {
    font-family: var(--font-family-primary);
    font-size: 16px;
    line-height: 1.6;
    color: var(--color-gray-400);
  }

  /* Stats Section */
  .stats-section {
    padding: 80px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 60px;
  }

  .stat-item {
    text-align: center;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .stat-item.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  .stat-number {
    font-family: var(--font-family-display);
    font-size: 48px;
    font-weight: 800;
    color: var(--color-white);
    margin-bottom: 12px;
    letter-spacing: -0.02em;
  }

  .stat-label {
    font-family: var(--font-family-primary);
    font-size: 14px;
    font-weight: 500;
    color: var(--color-gray-400);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .about-grid {
      grid-template-columns: 1fr;
      gap: 60px;
    }
    
    .team-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 40px;
    }
  }

  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
    }
    
    .value-item {
      grid-template-columns: 40px 1fr;
      gap: 16px;
    }
  }

  @media (max-width: 480px) {
    .stats-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
  }

  /* Brand Color Glow Effects */
  .title-glow-orange {
    text-shadow: 0 0 15px rgba(253, 117, 4, 0.4), 0 0 30px rgba(253, 117, 4, 0.2);
    transition: text-shadow 0.3s ease;
  }

  .title-glow-orange:hover {
    text-shadow: 0 0 25px rgba(253, 117, 4, 0.6), 0 0 50px rgba(253, 117, 4, 0.3);
  }

  .title-glow-blue {
    text-shadow: 0 0 15px rgba(52, 254, 250, 0.4), 0 0 30px rgba(52, 254, 250, 0.2);
    transition: text-shadow 0.3s ease;
  }

  .title-glow-blue:hover {
    text-shadow: 0 0 25px rgba(52, 254, 250, 0.6), 0 0 50px rgba(52, 254, 250, 0.3);
  }

  .title-glow-pink {
    text-shadow: 0 0 15px rgba(249, 33, 120, 0.4), 0 0 30px rgba(249, 33, 120, 0.2);
    transition: text-shadow 0.3s ease;
  }

  .title-glow-pink:hover {
    text-shadow: 0 0 25px rgba(249, 33, 120, 0.6), 0 0 50px rgba(249, 33, 120, 0.3);
  }

  .number-glow-orange {
    text-shadow: 0 0 10px rgba(253, 117, 4, 0.5), 0 0 20px rgba(253, 117, 4, 0.3);
    transition: text-shadow 0.3s ease;
  }

  .number-glow-orange:hover {
    text-shadow: 0 0 20px rgba(253, 117, 4, 0.7), 0 0 40px rgba(253, 117, 4, 0.4);
  }

  .number-glow-blue {
    text-shadow: 0 0 10px rgba(52, 254, 250, 0.5), 0 0 20px rgba(52, 254, 250, 0.3);
    transition: text-shadow 0.3s ease;
  }

  .number-glow-blue:hover {
    text-shadow: 0 0 20px rgba(52, 254, 250, 0.7), 0 0 40px rgba(52, 254, 250, 0.4);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Enhanced intersection observer for about page
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('in-view');
        }
      });
    }, observerOptions);

    // Observe all animated elements
    const animatedElements = document.querySelectorAll('.about-story, .about-values, .value-item, .team-member, .stat-item');
    
    animatedElements.forEach((el, index) => {
      observer.observe(el);
      
      // Add staggered delays for value items and team members
      if (el.classList.contains('value-item') || el.classList.contains('team-member') || el.classList.contains('stat-item')) {
        const element = el as HTMLElement;
        element.style.transitionDelay = `${index * 0.1}s`;
      }
    });
  });
</script> 
<div id="preloader" class="fixed inset-0 bg-black z-50 flex flex-col items-center justify-center">
  <!-- UNKN Logo Animation -->
  <div class="logo-container mb-12">
    <div class="unkn-logo text-6xl md:text-8xl font-black text-white tracking-wider">
      UNKN
    </div>
    <div class="logo-underline"></div>
  </div>
  
  <!-- Loading Animation -->
  <div class="loading-container">
    <div class="loading-dots flex space-x-2">
      <div class="dot dot-1"></div>
      <div class="dot dot-2"></div>
      <div class="dot dot-3"></div>
    </div>
    <div class="loading-text text-gray-400 text-sm font-light tracking-widest mt-6 text-center">
      LOADING EXPERIENCE
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const preloader = document.getElementById('preloader');
    
    // Animate logo entrance
    setTimeout(() => {
      const logo = document.querySelector('.unkn-logo');
      const underline = document.querySelector('.logo-underline');
      
      if (logo) {
        (logo as HTMLElement).style.opacity = '1';
        (logo as HTMLElement).style.transform = 'translateY(0)';
      }
      
      if (underline) {
        (underline as HTMLElement).style.width = '100%';
      }
    }, 300);
    
    // Hide preloader after 2 seconds
    setTimeout(() => {
      if (preloader) {
        preloader.style.opacity = '0';
        preloader.style.transition = 'opacity 0.8s ease';
        
        setTimeout(() => {
          if (preloader) {
            preloader.style.display = 'none';
            // Trigger main website animations
            window.dispatchEvent(new CustomEvent('preloader-complete'));
          }
        }, 800);
      }
    }, 2000);
  });
</script>

<style>
  .unkn-logo {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .logo-underline {
    height: 3px;
    width: 0;
    background: linear-gradient(90deg, #FD7504, #34FEFA, #F92178);
    transition: width 1s ease 0.5s;
    margin-top: 8px;
  }
  
  .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    animation: pulse 1.5s infinite ease-in-out;
  }
  
  .dot-1 {
    background: #FD7504;
    animation-delay: 0s;
  }
  
  .dot-2 {
    background: #34FEFA;
    animation-delay: 0.3s;
  }
  
  .dot-3 {
    background: #F92178;
    animation-delay: 0.6s;
  }
  
  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.7;
    }
    50% {
      transform: scale(1.2);
      opacity: 1;
    }
  }
</style> 
<section id="hero" class="relative min-h-screen flex items-center justify-center">
  <!-- Simple gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-black via-gray-900/50 to-black"></div>

  <!-- Main Content -->
  <div class="relative z-10 text-center max-w-7xl mx-auto px-6">
    <!-- Main Title -->
    <div class="hero-title-container mb-12">
      <h1 class="hero-title leading-none tracking-tight">
        <div class="hero-line mb-4">
          <span class="text-7xl md:text-8xl lg:text-9xl xl:text-[8rem] font-black text-white">CREATE</span>
        </div>
        <div class="hero-line mb-4">
          <span class="text-7xl md:text-8xl lg:text-9xl xl:text-[8rem] font-black text-white">CINEMATIC</span>
        </div>
        <div class="hero-line">
          <span id="rotating-word" class="text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-light text-gray-300 italic">experiences</span>
        </div>
      </h1>
    </div>

    <!-- Subtitle -->
    <div class="hero-subtitle-container mb-16">
      <p class="text-xl md:text-2xl font-light text-gray-400 max-w-3xl mx-auto leading-relaxed">
        Premium content creation for brands that demand excellence.<br>
        We craft stories that captivate and convert.
      </p>
    </div>

    <!-- CTA Buttons -->
    <div class="hero-cta-container flex flex-col sm:flex-row gap-6 justify-center items-center">
      <button class="hero-cta-primary px-8 py-4 text-lg font-medium bg-white text-black rounded-none hover:bg-gray-200 transition-colors duration-200 interactive">
        Start Your Project
      </button>
      
      <button class="hero-cta-secondary px-8 py-4 text-lg font-medium border border-white/30 text-white rounded-none hover:bg-white hover:text-black transition-all duration-200 interactive">
        View Our Work
      </button>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20 flex flex-col items-center">
    <div class="scroll-indicator w-6 h-12 border border-white/30 rounded-full flex justify-center relative">
      <div class="scroll-dot w-1 h-3 bg-white rounded-full mt-3"></div>
    </div>
    <p class="text-white/40 text-xs mt-2 tracking-widest font-light text-center">SCROLL</p>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Wait for preloader to complete
    window.addEventListener('preloader-complete', () => {
      animateHero();
      startWordRotation();
    });

    function animateHero() {
      const heroLines = document.querySelectorAll('.hero-line span');
      const heroSubtitle = document.querySelector('.hero-subtitle-container p');
      const heroCtas = document.querySelectorAll('.hero-cta-primary, .hero-cta-secondary');
      const scrollIndicator = document.querySelector('.scroll-indicator');

      // Animate title lines
      heroLines.forEach((line, index) => {
        const element = line as HTMLElement;
        setTimeout(() => {
          element.style.transform = 'translateY(0)';
          element.style.opacity = '1';
        }, 200 + (index * 150));
        
        element.style.transform = 'translateY(50px)';
        element.style.opacity = '0';
        element.style.transition = 'all 0.8s cubic-bezier(0.4, 0, 0.2, 1)';
      });

      // Animate subtitle
      setTimeout(() => {
        if (heroSubtitle) {
          (heroSubtitle as HTMLElement).style.transform = 'translateY(0)';
          (heroSubtitle as HTMLElement).style.opacity = '1';
        }
      }, 800);

      if (heroSubtitle) {
        (heroSubtitle as HTMLElement).style.transform = 'translateY(30px)';
        (heroSubtitle as HTMLElement).style.opacity = '0';
        (heroSubtitle as HTMLElement).style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
      }

      // Animate CTAs
      heroCtas.forEach((cta, index) => {
        const element = cta as HTMLElement;
        setTimeout(() => {
          element.style.transform = 'translateY(0)';
          element.style.opacity = '1';
        }, 1100 + (index * 100));
        
        element.style.transform = 'translateY(20px)';
        element.style.opacity = '0';
        element.style.transition = 'all 0.5s cubic-bezier(0.4, 0, 0.2, 1)';
      });

      // Animate scroll indicator
      setTimeout(() => {
        if (scrollIndicator) {
          (scrollIndicator as HTMLElement).style.opacity = '1';
        }
      }, 1500);

      if (scrollIndicator) {
        (scrollIndicator as HTMLElement).style.opacity = '0';
        (scrollIndicator as HTMLElement).style.transition = 'opacity 0.4s ease';
      }
    }

    function startWordRotation() {
      const rotatingWord = document.getElementById('rotating-word');
      if (!rotatingWord) return;
      
      const words = ['experiences', 'stories', 'content', 'campaigns', 'visuals', 'narratives'];
      let currentIndex = 0;
      
      function rotateWord() {
        if (!rotatingWord) return;
        
        // Fade out
        (rotatingWord as HTMLElement).style.opacity = '0';
        (rotatingWord as HTMLElement).style.transform = 'translateY(20px)';
        
        setTimeout(() => {
          if (rotatingWord) {
            currentIndex = (currentIndex + 1) % words.length;
            rotatingWord.textContent = words[currentIndex];
            
            // Fade in
            (rotatingWord as HTMLElement).style.opacity = '1';
            (rotatingWord as HTMLElement).style.transform = 'translateY(0)';
          }
        }, 300);
      }
      
      // Set initial transition
      (rotatingWord as HTMLElement).style.transition = 'all 0.3s ease-in-out';
      
      // Start rotation after initial animation
      setTimeout(() => {
        setInterval(rotateWord, 3000); // Change word every 3 seconds
      }, 2000);
    }

    // CTA button interactions
    const ctaPrimary = document.querySelector('.hero-cta-primary');
    const ctaSecondary = document.querySelector('.hero-cta-secondary');

    if (ctaPrimary) {
      ctaPrimary.addEventListener('click', () => {
        document.getElementById('contact')?.scrollIntoView({ behavior: 'smooth' });
      });
    }

    if (ctaSecondary) {
      ctaSecondary.addEventListener('click', () => {
        document.getElementById('work')?.scrollIntoView({ behavior: 'smooth' });
      });
    }
  });
</script>

<style>
  .hero-title {
    text-shadow: 0 2px 20px rgba(0,0,0,0.5);
  }

  .scroll-indicator {
    backdrop-filter: blur(10px);
  }

  .scroll-dot {
    animation: scrollBounce 2s infinite;
  }

  @keyframes scrollBounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(8px);
    }
    60% {
      transform: translateY(4px);
    }
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .hero-line span {
      font-size: 4rem !important;
    }
    
    .hero-subtitle-container p {
      font-size: 1.125rem !important;
      line-height: 1.6;
    }
    
    .hero-cta-container {
      flex-direction: column;
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .hero-line span {
      font-size: 3rem !important;
    }
  }
</style> 
            <section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden">
              <!-- Spline 3D Animation Container -->
              <div id="spline-container" class="absolute inset-0 z-10">
                <!-- Spline Animation -->
                <iframe 
                  id="spline-canvas"
                  src="https://my.spline.design/themuseum-PVyNkrhuH2syvDxmGoOJDiNZ/" 
                  frameborder="0" 
                  width="100%" 
                  height="100%"
                  class="w-full h-full"
                  style="border: none; background: transparent;"
                  loading="eager"
                  allow="camera; microphone; xr-spatial-tracking"
                ></iframe>
              </div>

              <!-- Minimalist Text Overlay -->
              <div class="relative z-20 text-center max-w-none mx-auto px-6 pointer-events-none">
                <!-- Ultra-minimalist wide title -->
                <div class="hero-title-container">
                  <h1 class="hero-title-minimal">
                    <div class="hero-line-minimal opacity-0 transform translate-y-8">
                      <span class="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-extralight tracking-[0.2em] text-white/90 uppercase">
                        The only
                      </span>
                    </div>
                    <div class="hero-line-minimal opacity-0 transform translate-y-8">
                      <span class="text-6xl md:text-7xl lg:text-8xl xl:text-9xl font-thin tracking-[0.25em] text-white uppercase mt-2">
                        creative studio
                      </span>
                    </div>
                    <div class="hero-line-minimal opacity-0 transform translate-y-8">
                      <span class="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-extralight tracking-[0.2em] text-white/90 uppercase">
                        you will ever need
                      </span>
                    </div>
                  </h1>
                </div>

                <!-- Minimal subtitle -->
                <div class="hero-subtitle-minimal opacity-0 transform translate-y-8 mt-12">
                  <p class="text-sm md:text-base font-light text-white/60 tracking-[0.15em] uppercase max-w-md mx-auto">
                    Interactive • Responsive • Revolutionary
                  </p>
                </div>

                <!-- Minimal CTA -->
                <div class="hero-cta-minimal opacity-0 transform translate-y-8 mt-16 pointer-events-auto">
                  <button class="hero-cta-minimal-btn text-sm font-light text-white/80 border border-white/20 px-8 py-3 tracking-[0.1em] uppercase hover:bg-white/5 hover:border-white/40 transition-all duration-300 interactive">
                    Explore
                  </button>
                </div>
              </div>

              <!-- Minimal scroll indicator -->
              <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-30 flex flex-col items-center opacity-0 scroll-indicator-minimal">
                <div class="w-px h-12 bg-white/20"></div>
                <p class="text-white/30 text-xs mt-2 tracking-[0.2em] font-light">SCROLL</p>
              </div>
            </section>

            <script>
              document.addEventListener('DOMContentLoaded', () => {
                // Wait for preloader to complete
                window.addEventListener('preloader-complete', () => {
                  initializeSpline();
                  animateMinimalHero();
                });

                function initializeSpline() {
                  const splineIframe = document.getElementById('spline-canvas') as HTMLIFrameElement;
                  if (splineIframe) {
                    console.log('Spline iframe initialized');
                    
                    // Wait for Spline to load, then start text animations
                    splineIframe.onload = () => {
                      console.log('Spline loaded successfully');
                      setTimeout(() => {
                        animateTextElements();
                      }, 500); // Small delay to let Spline fully render
                    };
                    
                    // Fallback timeout in case onload doesn't fire
                    setTimeout(() => {
                      if (!splineIframe.onload) {
                        console.log('Spline fallback timeout triggered');
                        animateTextElements();
                      }
                    }, 3000);
                  }
                }

                function animateMinimalHero() {
                  // Start text animations shortly after Spline begins
                  setTimeout(() => {
                    animateTextElements();
                  }, 1200); // Slightly longer delay to let Spline get going
                }

                function animateTextElements() {
                  const heroLines = document.querySelectorAll('.hero-line-minimal');
                  const heroSubtitle = document.querySelector('.hero-subtitle-minimal');
                  const heroCta = document.querySelector('.hero-cta-minimal');
                  const scrollIndicator = document.querySelector('.scroll-indicator-minimal');

                  // Animate title lines with staggered timing
                  heroLines.forEach((line, index) => {
                    const element = line as HTMLElement;
                    setTimeout(() => {
                      element.style.opacity = '1';
                      element.style.transform = 'translateY(0)';
                    }, 600 + (index * 800)); // Even slower, more deliberate timing to work with Spline
                    
                    element.style.transition = 'all 1.4s cubic-bezier(0.22, 1, 0.36, 1)'; // Ultra-smooth easing
                  });

                  // Animate subtitle
                  setTimeout(() => {
                    if (heroSubtitle) {
                      (heroSubtitle as HTMLElement).style.opacity = '1';
                      (heroSubtitle as HTMLElement).style.transform = 'translateY(0)';
                    }
                  }, 3000); // Adjusted timing

                  if (heroSubtitle) {
                    (heroSubtitle as HTMLElement).style.transition = 'all 1s cubic-bezier(0.22, 1, 0.36, 1)';
                  }

                  // Animate CTA
                  setTimeout(() => {
                    if (heroCta) {
                      (heroCta as HTMLElement).style.opacity = '1';
                      (heroCta as HTMLElement).style.transform = 'translateY(0)';
                    }
                  }, 4000); // Adjusted timing

                  if (heroCta) {
                    (heroCta as HTMLElement).style.transition = 'all 0.8s cubic-bezier(0.22, 1, 0.36, 1)';
                  }

                  // Animate scroll indicator
                  setTimeout(() => {
                    if (scrollIndicator) {
                      (scrollIndicator as HTMLElement).style.opacity = '1';
                    }
                  }, 5000); // Adjusted timing

                  if (scrollIndicator) {
                    (scrollIndicator as HTMLElement).style.transition = 'opacity 0.6s ease';
                  }
                }

                // CTA button interaction
                const ctaButton = document.querySelector('.hero-cta-minimal-btn');
                if (ctaButton) {
                  ctaButton.addEventListener('click', () => {
                    document.getElementById('services')?.scrollIntoView({ behavior: 'smooth' });
                  });
                }
              });
            </script>

            <style>
              /* Spline Container */
              #spline-container {
                backdrop-filter: blur(0.5px);
              }

              #spline-canvas {
                opacity: 0;
                animation: splineFadeIn 2.5s ease-out 0.8s forwards;
                border-radius: 0;
                overflow: hidden;
              }

              @keyframes splineFadeIn {
                0% {
                  opacity: 0;
                  transform: scale(1.02) translateZ(0);
                  filter: blur(2px);
                }
                50% {
                  opacity: 0.7;
                  transform: scale(1.01) translateZ(0);
                  filter: blur(1px);
                }
                100% {
                  opacity: 1;
                  transform: scale(1) translateZ(0);
                  filter: blur(0px);
                }
              }

              /* Minimalist Hero Typography */
              .hero-title-minimal {
                line-height: 0.9;
                margin-bottom: 0;
              }

              .hero-line-minimal {
                margin-bottom: 0.5rem;
                will-change: transform, opacity;
              }

              .hero-line-minimal:last-child {
                margin-bottom: 0;
              }

              /* Ultra-minimal styling */
              .hero-subtitle-minimal {
                will-change: transform, opacity;
              }

              .hero-cta-minimal {
                will-change: transform, opacity;
              }

              .hero-cta-minimal-btn {
                backdrop-filter: blur(10px);
                background: rgba(0, 0, 0, 0.1);
                border-radius: 0;
                transition: all 0.3s cubic-bezier(0.22, 1, 0.36, 1);
              }

              .hero-cta-minimal-btn:hover {
                transform: translateY(-1px);
                backdrop-filter: blur(15px);
                background: rgba(255, 255, 255, 0.05);
              }

              .scroll-indicator-minimal {
                will-change: opacity;
              }

              /* Mobile optimizations for minimal design */
              @media (max-width: 768px) {
                .hero-line-minimal span {
                  letter-spacing: 0.1em !important;
                }
                
                .hero-line-minimal span:nth-child(1) {
                  font-size: 2rem !important;
                }
                
                .hero-line-minimal span:nth-child(2) {
                  font-size: 3rem !important;
                }
                
                .hero-subtitle-minimal p {
                  font-size: 0.75rem !important;
                  letter-spacing: 0.1em !important;
                }
                
                .hero-cta-minimal-btn {
                  padding: 12px 24px !important;
                  font-size: 0.75rem !important;
                }
              }

              @media (max-width: 480px) {
                .hero-line-minimal span:nth-child(1) {
                  font-size: 1.5rem !important;
                }
                
                .hero-line-minimal span:nth-child(2) {
                  font-size: 2.5rem !important;
                }
              }

              /* Performance optimizations */
              .hero-title-minimal,
              .hero-subtitle-minimal,
              .hero-cta-minimal {
                transform: translate3d(0, 0, 0);
                backface-visibility: hidden;
              }
            </style> 
<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const burgerMenu = document.getElementById('burger-menu');
    const closeMenu = document.getElementById('close-menu');
    const navOverlay = document.getElementById('nav-overlay');
    const navLinks = document.querySelectorAll('.nav-link');
    const navTexts = document.querySelectorAll('.nav-text');
    const burgerLines = document.querySelectorAll('.burger-line');
    let isOpen = false;

    function toggleMenu() {
      if (isOpen) {
        closeMenuFunction();
      } else {
        openMenu();
      }
    }

    function openMenu() {
      isOpen = true;
      
      // Animate burger to X
      burgerLines[0].style.transform = 'rotate(45deg)';
      burgerLines[0].style.top = '16px';
      burgerLines[1].style.opacity = '0';
      burgerLines[2].style.transform = 'rotate(-45deg)';
      burgerLines[2].style.top = '16px';
      
      // Slide menu in from right
      navOverlay.style.transform = 'translateX(0)';
      navOverlay.style.transition = 'transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
      
      // Animate menu items with stagger
      navTexts.forEach((text, index) => {
        setTimeout(() => {
          text.style.transform = 'translateX(0) translateY(0)';
          text.style.opacity = '1';
        }, 400 + (index * 60));
        
        // Reset initial state
        text.style.transform = 'translateX(-20px) translateY(5px)';
        text.style.opacity = '0';
        text.style.transition = 'all 0.5s ease-out';
      });
    }

    function closeMenuFunction() {
      isOpen = false;
      
      // First fade out text quickly
      navTexts.forEach((text) => {
        text.style.transform = 'translateX(-10px) translateY(5px)';
        text.style.opacity = '0';
        text.style.transition = 'all 0.2s ease-in';
      });
      
      // Then slide menu out after text fades
      setTimeout(() => {
        navOverlay.style.transform = 'translateX(100%)';
        navOverlay.style.transition = 'transform 0.4s ease-in';
        
                 // Animate X back to burger
         burgerLines[0].style.transform = 'rotate(0deg)';
         burgerLines[0].style.top = '12px';
         burgerLines[1].style.opacity = '1';
         burgerLines[2].style.transform = 'rotate(0deg)';
         burgerLines[2].style.top = '20px';
      }, 150);
    }

    function setupHoverEffects() {
      navLinks.forEach((link, index) => {
        const underline = link.querySelector('.nav-underline');
        const colors = ['#FD7504', '#F92178', '#34FEFA', '#FD7504', '#F92178'];
        const color = colors[index];

        link.addEventListener('mouseenter', () => {
          underline.style.width = '50%';
          underline.style.backgroundColor = color;
          underline.style.opacity = '0.8';
          
          // Add subtle floating animation
          link.querySelector('.nav-text').style.transform = 'translateY(-2px)';
        });

        link.addEventListener('mouseleave', () => {
          underline.style.width = '0%';
          underline.style.opacity = '0.4';
          
          // Reset position
          link.querySelector('.nav-text').style.transform = 'translateY(0)';
        });

        // Smooth scroll on click
        link.addEventListener('click', (e) => {
          e.preventDefault();
          const targetId = link.getAttribute('href').substring(1);
          const targetElement = document.getElementById(targetId);
          
          closeMenuFunction();
          
          if (targetElement) {
            setTimeout(() => {
              targetElement.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
              });
            }, 600);
          }
        });
      });
    }

    // Event listeners
    burgerMenu.addEventListener('click', toggleMenu);
    closeMenu.addEventListener('click', closeMenuFunction);
    
    // Close menu when clicking outside
    navOverlay.addEventListener('click', (e) => {
      if (e.target === navOverlay) {
        closeMenuFunction();
      }
    });

    // Setup hover effects
    setupHoverEffects();

    // Navbar scroll behavior
    let lastScrollY = window.scrollY;
    
    window.addEventListener('scroll', () => {
      const navbar = document.getElementById('navbar');
      const currentScrollY = window.scrollY;
      
      if (currentScrollY > 100) {
        navbar.style.backdropFilter = 'blur(10px)';
        navbar.style.background = 'rgba(0, 0, 0, 0.8)';
      } else {
        navbar.style.backdropFilter = 'none';
        navbar.style.background = 'transparent';
      }
      
      // Hide/show navbar on scroll
      if (currentScrollY > lastScrollY && currentScrollY > 200) {
        navbar.style.transform = 'translateY(-100%)';
      } else {
        navbar.style.transform = 'translateY(0)';
      }
      
      lastScrollY = currentScrollY;
    });
  });
</script>

<style>
  #navbar {
    transition: all 0.3s ease;
  }

  .nav-link {
    position: relative;
    display: inline-block;
  }

  .nav-text {
    display: inline-block;
    transition: all 0.3s ease-out;
  }

  .nav-underline {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background-color: rgba(255, 255, 255, 0.4);
    transition: all 0.3s ease-out;
    opacity: 0.4;
  }

  /* Burger menu animations */
  .burger-line {
    transform-origin: center;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .nav-link {
      font-size: 3rem;
    }
    
    #nav-overlay .pl-12 {
      padding-left: 2rem;
    }
    
    .nav-menu {
      margin-top: -2rem;
    }
  }

  @media (max-width: 480px) {
    .nav-link {
      font-size: 2.25rem;
    }
    
    #nav-overlay .pl-12 {
      padding-left: 1.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Smooth page transition for About link
    const aboutLink = document.querySelector('a[href="/about"]');
    
    if (aboutLink) {
      aboutLink.addEventListener('click', (e) => {
        e.preventDefault();
        
        // Create transition overlay
        const transitionOverlay = document.createElement('div');
        transitionOverlay.style.cssText = `
          position: fixed;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: black;
          z-index: 9999;
          opacity: 0;
          transition: opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1);
          pointer-events: none;
        `;
        
        document.body.appendChild(transitionOverlay);
        
        // Close mobile menu if open
        const navOverlay = document.getElementById('nav-overlay');
        const burgerMenu = document.getElementById('burger-menu');
        
                 if (navOverlay && navOverlay.classList.contains('active')) {
           // Close menu with animation
           const navLinks = navOverlay.querySelectorAll('.nav-link');
           navLinks.forEach((link, index) => {
             setTimeout(() => {
               const htmlLink = link as HTMLElement;
               htmlLink.style.opacity = '0';
               htmlLink.style.transform = 'translateY(-20px)';
             }, index * 50);
           });
           
           setTimeout(() => {
             navOverlay.classList.remove('active');
             if (burgerMenu) {
               burgerMenu.classList.remove('active');
             }
           }, navLinks.length * 50 + 200);
         }
        
        // Start transition
        setTimeout(() => {
          transitionOverlay.style.opacity = '1';
          
          // Navigate after transition completes
          setTimeout(() => {
            window.location.href = '/about';
          }, 600);
        }, 100);
      });
    }

    // Enhanced burger menu functionality
    const burgerMenu = document.getElementById('burger-menu');
    const navOverlay = document.getElementById('nav-overlay');
    const closeBtn = document.getElementById('close-menu');

    if (burgerMenu && navOverlay) {
      burgerMenu.addEventListener('click', () => {
        navOverlay.classList.add('active');
        burgerMenu.classList.add('active');
        
                 // Animate menu items
         const navLinks = navOverlay.querySelectorAll('.nav-link');
         navLinks.forEach((link, index) => {
           const htmlLink = link as HTMLElement;
           htmlLink.style.opacity = '0';
           htmlLink.style.transform = 'translateY(20px)';
           
           setTimeout(() => {
             htmlLink.style.opacity = '1';
             htmlLink.style.transform = 'translateY(0)';
           }, 100 + (index * 100));
         });
      });
    }

    if (closeBtn && navOverlay) {
             closeBtn.addEventListener('click', () => {
         const navLinks = navOverlay.querySelectorAll('.nav-link');
         
         // Animate out
         navLinks.forEach((link, index) => {
           setTimeout(() => {
             const htmlLink = link as HTMLElement;
             htmlLink.style.opacity = '0';
             htmlLink.style.transform = 'translateY(-20px)';
           }, index * 50);
         });
         
         setTimeout(() => {
           navOverlay.classList.remove('active');
           if (burgerMenu) {
             burgerMenu.classList.remove('active');
           }
         }, navLinks.length * 50 + 200);
       });
    }

    // Smooth scrolling for anchor links (home page sections)
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        
                 // Close mobile menu if open
         if (navOverlay && navOverlay.classList.contains('active')) {
           const navLinks = navOverlay.querySelectorAll('.nav-link');
           navLinks.forEach((link, index) => {
             setTimeout(() => {
               const htmlLink = link as HTMLElement;
               htmlLink.style.opacity = '0';
               htmlLink.style.transform = 'translateY(-20px)';
             }, index * 50);
           });
           
           setTimeout(() => {
             navOverlay.classList.remove('active');
             if (burgerMenu) {
               burgerMenu.classList.remove('active');
             }
           }, navLinks.length * 50 + 200);
         }
        
        const targetId = this.getAttribute('href').substring(1);
        const targetElement = document.getElementById(targetId);
        
        if (targetElement) {
          targetElement.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script> 